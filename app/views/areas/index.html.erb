<h1>Listing areas</h1>

<div id="areas_table">
	<table>
	  <thead>
	    <tr>
	      <th colspan="3"></th>
	    </tr>
	  </thead>
	
	  <tbody>
	    <% @areas.each do |area| %>
	      <tr>
	      	<td><%= area.name %></td>
	        <td><%= link_to 'Show', area,:class => "navigation" %></td>
	        <td><%= link_to 'Edit', edit_area_path(area),:class => "navigation" %></td>
	        <td class="tddel"><%= link_to 'Delete', area, method: :delete, data: { confirm: 'Are you sure?' }, :class => ["delete_button", "delete_area"] %></td>
	      </tr>
	    <% end %>
	  </tbody>
	</table>
</div>

<br>

<%= link_to 'New Area', new_area_path %>
